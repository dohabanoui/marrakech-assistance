<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@drawable/round_bg"
    tools:context=".Activity.TransportActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/stationTransport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Station Bus"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:paddingEnd="5dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/favoriteBackground"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Favorite Background"
                        android:src="@drawable/favoris_bg" />

                    <ImageView
                        android:id="@+id/favoriteIcon"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:contentDescription="Favorite Icon"
                        android:src="@drawable/favoris_noir" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/IdTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="ID"
                android:layout_marginStart="8dp"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/ligneidTransport"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text="ligneId"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="-4dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/lignenumTransport"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="L12" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
